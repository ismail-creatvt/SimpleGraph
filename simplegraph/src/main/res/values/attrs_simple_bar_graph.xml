    <color name="sbg_default_bubbleStrokeColor">#514FA2</color>
    <color name="sbg_default_textColorLabel">#424242</color>
    <color name="sbg_default_barStrokeColor">#9a9a9a</color>
    <color name="sbg_default_barFillColor">#e0e0e0</color>
    <color name="sbg_default_strokeColorAxis">#868686</color>
    <color name="sbg_default_textColorBarValue">#c3c3c3</color>
    <dimen name="sbg_default_bubbleRadius">6dp</dimen>
    <dimen name="sbg_default_bubbleStrokeWidth">2dp</dimen>
    <dimen name="sbg_default_lineStrokeWidth">2dp</dimen>
    <dimen name="sbg_default_barStrokeWidth">0.5dp</dimen>
    <dimen name="sbg_default_textSizeXLabel">11sp</dimen>
    <dimen name="sbg_default_textSizeYLabel">11sp</dimen>
    <dimen name="sbg_default_strokeWidthAxis">0.25dp</dimen>
    <dimen name="sbg_default_textSizeBarValue">12sp</dimen>
    <dimen name="sbg_default_barSpacing">10dp</dimen>

</resources>
