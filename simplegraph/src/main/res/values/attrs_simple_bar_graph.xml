<resources>
    <declare-styleable name="SimpleBarGraph">
        <attr name="sbg_colorLine" format="color"/>
        <attr name="sbg_bubbleFillColor" format="color"/>
        <attr name="sbg_bubbleStrokeColor" format="color"/>
        <attr name="sbg_textColorLabel" format="color"/>
        <attr name="sbg_barStrokeColor" format="color"/>
        <attr name="sbg_barFillColor" format="color"/>
        <attr name="sbg_strokeColorAxis" format="color"/>
        <attr name="sbg_textColorBarValue" format="color"/>
        <attr name="sbg_bubbleRadius" format="dimension"/>
        <attr name="sbg_bubbleStrokeWidth" format="dimension"/>
        <attr name="sbg_barWidth" format="dimension"/>
        <attr name="sbg_barSpacing" format="dimension"/>
        <attr name="sbg_barStrokeWidth" format="dimension"/>
        <attr name="sbg_textSizeXLabel" format="dimension"/>
        <attr name="sbg_textSizeYLabel" format="dimension"/>
        <attr name="sbg_strokeWidthAxis" format="dimension"/>
        <attr name="sbg_textSizeBarValue" format="dimension"/>
        <attr name="sbg_lineStrokeWidth" format="dimension"/>
        <attr name="sbg_maxBarWidth" format="dimension"/>
